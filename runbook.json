{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "JSON Schema for Automatiqal runbook files",
    "description": "",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "description": "Name of the runbook",
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "edition": {
            "description": "Target Qlik Sense environment type (windows or saas)",
            "type": "string",
            "enum": [
                "windows",
                "saas"
            ],
            "contains": {
                "const": "controls"
            },
            "additionalItems": false
        },
        "trace": {
            "description": "Trace levels",
            "type": "string",
            "enum": [
                "error",
                "debug"
            ],
            "contains": {
                "const": "controls"
            },
            "additionalItems": false
        },
        "environment": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string",
                    "description": ""
                },
                "port": {
                    "type": "number",
                    "description": ""
                },
                "authentication": {
                    "type": "object",
                    "description": "",
                    "properties": {
                        "cert": {
                            "type": "string"
                        },
                        "key": {
                            "type": "string"
                        },
                        "user_dir": {
                            "type": "string"
                        },
                        "user_name": {
                            "type": "string"
                        }
                    }
                }
            },
            "required": [
                "host",
                "authentication"
            ]
        },
        "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/app.get"
                    },
                    {
                        "$ref": "#/definitions/app.upload"
                    },
                    {
                        "$ref": "#/definitions/app.update"
                    }
                ]
            }
        }
    },
    "required": [
        "name",
        "environment",
        "tasks"
    ],
    "definitions": {
        "app.get": {
            "type": "object",
            "required": [
                "name",
                "operation",
                "filter"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "operation": {
                    "type": "string",
                    "enum": [
                        "app.get"
                    ]
                },
                "filter": {
                    "type": "string"
                },
                "skip": {
                    "type": "boolean"
                }
            }
        },
        "app.upload": {
            "type": "object",
            "required": [
                "name",
                "operation",
                "details"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "operation": {
                    "type": "string",
                    "enum": [
                        "app.upload"
                    ]
                },
                "details": {
                    "type": "object",
                    "required": [
                        "file",
                        "name"
                    ],
                    "properties": {
                        "file": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "skip": {
                    "type": "boolean"
                }
            }
        },
        "app.update": {
            "type": "object",
            "required": [
                "name",
                "operation",
                "details"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "operation": {
                    "type": "string",
                    "enum": [
                        "app.update"
                    ]
                },
                "details": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "tags": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    }
                },
                "skip": {
                    "type": "boolean"
                }
            }
        }
    }
}