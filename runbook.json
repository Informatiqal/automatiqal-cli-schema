{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "JSON Schema for Automatiqal runbook files",
    "description": "",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "name": {
            "type": "string",
            "description": "Name of the runbook"
        },
        "environment": {
            "type": "object",
            "properties": {
                "host": {
                    "type": "string",
                    "description": ""
                },
                "port": {
                    "type": "number",
                    "description": ""
                },
                "authentication": {
                    "type": "object",
                    "description": "",
                    "properties": {
                        "cert": {
                            "type": "string"
                        },
                        "key": {
                            "type": "string"
                        },
                        "user_dir": {
                            "type": "string"
                        },
                        "user_name": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "tasks": {
            "type": "array",
            "items": [
                {
                    "name": {
                        "type": "string"
                    },
                    "description1": {
                        "type": "string"
                    },
                    "operation": {
                        "type": "string"
                    },
                    "details": {
                        "type": "object",
                        "properties": {
                            "file": {
                                "type": "string"
                            },
                            "name": {
                                "type": "string"
                            }
                        }
                    }
                }
            ]
        }
    }
}