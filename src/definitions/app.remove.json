{
    "type": "object",
    "description": "Remove app/apps",
    "properties": {
        "name": {
            "type": "string"
        },
        "operation": {
            "type": "string",
            "enum": [
                "app.remove"
            ]
        },
        "skip": {
            "type": "boolean"
        },
        "filter": {
            "type": "string",
            "description": "Filter to apply to retrieve the apps to update"
        },
        "source": {
            "type": "string",
            "description": "Name of previously defined tasks. Use the result of the task as source"
        },
        "options": {
            "type": "object",
            "properties": {
                "multiple": {
                    "type": "boolean"
                }
            }
        }
    },
    "required": [
        "name",
        "operation"
    ],
    "oneOf": [
        {
            "required": [
                "filter"
            ],
            "not": {
                "required": [
                    "source"
                ]
            }
        },
        {
            "required": [
                "source"
            ],
            "not": {
                "required": [
                    "filter"
                ]
            }
        }
    ]
}