{
    "type": "object",
    "description": "Create new composite trigger",
    "properties": {
        "name": {
            "type": "string"
        },
        "operation": {
            "type": "string",
            "enum": [
                "compositeTrigger.create"
            ]
        },
        "details": {
            "type": "object",
            "required": [
                "name",
                "eventTasks",
                "task"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "eventTasks": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "state": {
                                "type": "string",
                                "enum": [
                                    "success",
                                    "fail"
                                ]
                            }
                        },
                        "oneOf": [
                            {
                                "properties": {
                                    "id": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "id"
                                ],
                                "not": {
                                    "properties": {
                                        "filter": {
                                            "type": "string"
                                        }
                                    },
                                    "required": [
                                        "filter"
                                    ]
                                }
                            },
                            {
                                "properties": {
                                    "filter": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "filter"
                                ],
                                "not": {
                                    "required": [
                                        "id"
                                    ]
                                }
                            }
                        ]
                    }
                },
                "timeConstraints": {
                    "type": "object",
                    "properties": {
                        "days": {
                            "type": "integer"
                        },
                        "hours": {
                            "type": "integer"
                        },
                        "minutes": {
                            "type": "integer"
                        },
                        "seconds": {
                            "type": "integer"
                        }
                    }
                },
                "task": {
                    "oneOf": [
                        {
                            "properties": {
                                "id": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "id"
                            ],
                            "not": {
                                "properties": {
                                    "filter": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "filter"
                                ]
                            }
                        },
                        {
                            "properties": {
                                "filter": {
                                    "type": "string"
                                }
                            },
                            "required": [
                                "filter"
                            ],
                            "not": {
                                "required": [
                                    "id"
                                ]
                            }
                        }
                    ]
                }
            }
        },
        "skip": {
            "type": "boolean"
        }
    },
    "required": [
        "name",
        "operation",
        "details"
    ]
}